{% extends 'base-admin.html.twig' %}

{% block body %}
    <section class="text-center container">
        <div class="row ">
            <div class="mx-auto">
                <h1 class="fw-light">Ãœbersicht der Tags/Hilfe
                    <a href="{{ path('app_tag_new') }}" class="btn btn-primary btn-lg btn-icon rounded-circle {% if not is_granted('ROLE_ADMIN_TAG') %}disabled{% endif %}">
                        <i class="bi bi-plus"></i>
                    </a>
                </h1>
            </div>
        </div>
        {% if tags is empty %}
            {% include 'partials/no-data.html.twig' %}
        {% endif %}
    </section>
    <div class="album py-5">
        <div class="container table-responsive">
            {% if tags is not empty %}
                <table id="housing-table" class="table table-striped datatable" style="width:100%">
                    <thead>
                    <tr>
                        <th>Aktionen</th>
                        <th>Titel</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for currentTag in tags %}
                        <tr>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_tag_edit', {'id': currentTag.id}) }}" type="button" class="btn btn-sm btn-warning {% if not is_granted('ROLE_ADMIN_TAG') %}disabled{% endif %}"><i class="bi bi-pencil-square"></i></a>
                                    {% include 'partials/delete-button.html.twig' with {'path': path('app_tag_remove', {'id': currentTag.id}) } %}
                                </div>
                            </td>
                            <td>{{ currentTag.title }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}
