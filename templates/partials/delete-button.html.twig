{% set color = color is defined ? color : 'btn-danger' %}
{% set icon = icon is defined ? icon : 'bi bi-trash' %}
<form method="post" action="{{ path }}">
    <input type="hidden" name="_method" value="DELETE">
    <button type="button" class="btn delete btn-sm {{ color }}" {% if not is_granted('ROLE_ADMIN') %}disabled{% endif %}><i class="{{ icon }}"></i></button>
</form>
