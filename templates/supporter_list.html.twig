{% extends 'base.html.twig' %}

{% block body %}
    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">{{ title }}</h1>
                <p class="lead text-muted">{{ description }}</p>
                <p>
                    <a href="{{ path('app_supporter_new') }}" class="btn btn-primary my-2">neuen Helfer erstellen</a>
                </p>
            </div>
        </div>
    </section>
    <div class="album py-5">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {% for currentSupporter in supporter %}
                    <div class="col">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h3 class="card-text">{{ currentSupporter.name }}</h3>
                                <p class="card-text">{{ currentSupporter.information }}</p>
                                <p class="card-text">{{ currentSupporter.contact }}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="{{ path('app_supporter_edit', { 'id': currentSupporter.id }) }}" type="button" class="btn btn-sm btn-outline-secondary">Bearbeiten</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
